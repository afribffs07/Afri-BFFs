{
  "cli": {
    "version": ">= 3.0.0"
  },
  "build": {
    "development": {
      "distribution": "internal",
      "ios": { "simulator": true }
    },
    "preview": {
      "distribution": "internal",
      "ios": { "simulator": false }
    },
    "production": {
      "ios": {
        "simulator": false,
        "workflow": "deploy",
        "credentialsSource": "remote",
        "appStoreConnectKey": {
          "keyId": "$ASC_API_KEY_ID",
          "issuerId": "$ASC_API_ISSUER_ID",
          "key": "$ASC_API_KEY_FILE"
        }
      }
    }
  }
}

